<div class="flash">
	<% if flash[:notice] %>
	<div class="alert alert-success">
	    <a href="#" class="close" data-dismiss="alert">&times;</a>
	    <%= flash[:notice] %>
	</div>
	<% end %>
	<% if flash[:alert] %>
	<div class="alert alert-warning">
	    <a href="#" class="close" data-dismiss="alert">&times;</a>
	    <%= flash[:alert] %>
	</div>
	<% end %>
</div>