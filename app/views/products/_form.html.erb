<%= form_for(@product) do |f| %>
<%= render partial: "shared/form_errors", locals: { entity: @product, msg: "este Producto" } %>

<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            <%= f.label :barcode %>
            <%= f.number_field :barcode, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :brand %>
            <%= f.text_field :brand, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, :class => "form-control" %>
        </div>        
        <div class="form-group">
            <%= f.label :content %>
            <%= f.text_field :content, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :unit %>
            <%= f.text_field :unit, :class => "form-control" %>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <%= f.label :price %>
            <%= f.number_field :price, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :price_net %>
            <%= f.number_field :price_net, :class => "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :tax_id %>
            <%= f.collection_select :tax_id, Tax.where(client:current_user.client), :id, :name, { prompt: true }, { :class => 'form-control' }  %>
        </div>
        <div class="form-group">
            <%= f.label :tag_id %>
            <%= f.collection_select :tag_id, Tag.where(client: current_user.client), :id, :name, { prompt: true }, { :class => 'form-control' }  %>
        </div>
    </div>
</div>

<div class="actions text-right">
    <%= f.submit :class => "btn btn-success" %>
</div>
<% end %>

<script type="text/javascript">
$("#product_tag_id").select2({
  placeholder: "Seleccione una Familia",
  dropdownCssClass : 'form-control'
});
</script>
