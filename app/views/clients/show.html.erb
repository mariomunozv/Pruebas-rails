<h1>Detail</h1>
<p></p>
<br>

<div class="panel panel-default">
	<div class="panel-heading panel-heading-toolbox">
		<div class="panel-title">Detail</div>
		<div class="panel-toolbar">
			<%= link_to 'Volver', clients_path, :class => "btn btn-link" %>
			<%= link_to edit_client_path(@client), :class => "btn btn-default" do %>
				<i class="fa fa-pencil"></i>
			<% end %>
			<%= link_to @client, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %>
				<i class="fa fa-trash-o"></i>
			<% end %>
		</div>
	</div>
	<div class="panel-body">
		
		<table class="table table-bordered">
			<tbody>
							<tr>
				  <th>Name:</th>
				  <td><%= @client.name %></td>
				</tr>
						</tbody>
		</table>

	</div>
</div>
