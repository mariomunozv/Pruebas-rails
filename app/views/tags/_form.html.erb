<%= form_for(@tag) do |f| %>
<%= render partial: "shared/form_errors", locals: { entity: @tag, msg: "esta Familia" } %>

<div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
</div>
<div class="actions text-right">
    <%= f.submit :class => "btn btn-success" %>
</div>
<% end %>
