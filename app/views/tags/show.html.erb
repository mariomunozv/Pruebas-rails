<h1>Detalle de la familia <%= @tag.name %></h1>
<p>A continuación se muestra el detalle de la familia.</p>
<br>

<div class="panel panel-default">
	<div class="panel-heading panel-heading-toolbox">
		<div class="panel-title">Detail</div>
		<div class="panel-toolbar">
			<%= link_to 'Volver', tags_path, :class => "btn btn-link" %>
			<%= link_to edit_tag_path(@tag), :class => "btn btn-default" do %>
			<i class="fa fa-pencil"></i>
			<% end %>
			<%= link_to @tag, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %>
			<i class="fa fa-trash-o"></i>
			<% end %>
		</div>
	</div>
	<div class="panel-body">
		
		<table class="table table-bordered">
			<tbody>
				<tr>
					<th>Nombre:</th>
					<td><%= @tag.name %></td>
				</tr>
				<tr>
					<th>Fecha de creación:</th>
					<td><%= @tag.created_at %></td>
				</tr>
			</tbody>
		</table>

	</div>
</div>

<div class="panel panel-default">
  <div class="panel-heading panel-heading-toolbox">
    <div class="panel-title">
      Productos de la familia <%= @tag.name %>
    </div>
    <div class="panel-toolbar">
      <!--
      <%= link_to new_product_path, :class => "btn btn-success" do %>
        <i class="fa fa-plus"></i>
      <% end %>
      -->
    </div>
  </div>
  <div class="panel-body">
    
    <table class="table table-hover">
      <thead>
        <tr>
            <th>Código</th>
            <th>Marca</th>
            <th>Nombre</th>
            <th>Contenido</th>
            <th>Price</th>
        </tr>
      </thead>

      <tbody>
        <% @tag.product_tags.each do |product| %>
          <tr>
            <td><%= product.product.barcode %></td>
            <td><%= product.product.brand %></td>
            <td><%= product.product.name %></td>
            <td><%= product.product.content %> <%= product.product.unit %></td>
            <td>$ <%= product.product.price.to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse %></td>                        
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>