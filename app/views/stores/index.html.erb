<h1>Listado de tiendas</h1>
<p>A continuación se listan tiendas los almacenados en el sistema</p>
<br>

<div class="panel panel-default">
  <div class="panel-heading panel-heading-toolbox">
    <div class="panel-title">
      Listado de tiendas
    </div>
    <div class="panel-toolbar">
      <%= link_to new_store_path, :class => "btn btn-success" do %>
      <i class="fa fa-plus"></i>
      <% end %>
    </div>
  </div>
  <div class="panel-body">

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Región</th>
          <th>Comuna</th>
          <th>Dirección</th>
        </tr>
      </thead>

      <tbody>
        <% @stores.each do |store| %>
        <tr>
          <td>
            <%= link_to store do %>
            <%= store.name %>
            <% end %>
          </td>
          <td><%= store.comune.region %></td>
          <td><%= store.comune %></td>
          <td><%= store.address %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <%= will_paginate @stores, renderer: BootstrapPagination::Rails %>
  </div>
</div>

<br>
