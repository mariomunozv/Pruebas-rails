<%= form_for(@store) do |f| %>
<%= render partial: "shared/form_errors", locals: { entity: @store, msg: "esta Tienda" } %>

<div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
</div>
<div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, :class => "form-control" %>
</div>
<div class="form-group">
    <%= f.label :comune_id %>
    <%= f.collection_select :comune_id, Comune.all.order_by(:name.asc), :id, :name, { prompt: true }, { :class => 'form-control' }  %>
</div>
	<br>
<div class="form-group">
	<%= f.label :cashboxes %>
	<table class="table">
		<tbody>
	<%= f.fields_for :cashboxes do |builder| %>
		<%= render "cashbox_fields", :f => builder %>
	<% end %>
		</tbody>
	</table>
	<p><%= link_to_add_fields "Agregar caja", f, :cashboxes %></p>
</div>
<div class="actions text-right">
    <%= f.submit :class => "btn btn-success" %>
</div>
<% end %>
