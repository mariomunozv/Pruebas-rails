<%= form_for(@tax) do |f| %>
<%= render partial: "shared/form_errors", locals: { entity: @tax, msg: "este Impuesto"} %>

<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, :class => "form-control" %>
        </div>        
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <%= f.label :value %>
            <%= f.text_field :value, :class => "form-control" %>
        </div>
    </div>
</div>

<div class="actions text-right">
    <%= f.submit :class => "btn btn-success" %>
</div>
<% end %>
